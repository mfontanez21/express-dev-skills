<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Melvin's Super Software Skills</h1>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <a href ="/skills/<%= skill._id %>"><%= skill.text %></a>
        - 
        <%= skill.done ? 'done' : "not done" %>
      </li>
    <% }) %>

    <a href="/skills/new">Add a new Super Skill</a>
  </ul>
</body>
</html>